extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Students List #[a.w3-btn.w3-round.w3-grey(href="/addPerson") + ]
    .w3-container
      table.w3-table-all
        tr
          th Name
          th Idade
          th Sexo
          th Actions
        
        each s in slist
          tr
            td
              a(href="/person/"+s.nome)= s.nome
            td= s.idade
            td= s.sexo
            td
              button.w3-btn.w3-round.w3-indigo.w3-margin-right 
                a(href="/editPerson/"+s.nome) Edit
              button.w3-btn.w3-round.w3-indigo.w3-margin-right  
                a(href="/deletePerson/"+s.nome) Delete
              
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}
    